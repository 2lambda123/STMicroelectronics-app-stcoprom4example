<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#87cef7" />
             <gradient  android:angle="-90"  android:startColor="#1005a1" android:endColor="#2608d6"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#87cef7" />
             <solid  android:color="#e0341e"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#87cef7" />
             <gradient  android:angle="-90"  android:startColor="#87ceeb" android:endColor="#0000f7" />           
         </shape>
     </item>
</selector>    
