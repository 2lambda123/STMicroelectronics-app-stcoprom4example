<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ReceivedText">
        <item name="android:background">@drawable/shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingStart">@dimen/horizontal_margin_half</item>
        <item name="android:paddingEnd">@dimen/horizontal_margin_half</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/custom_btn_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/horizontal_margin_half</item>
        <item name="android:paddingEnd">@dimen/horizontal_margin_half</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
